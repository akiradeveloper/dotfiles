<% if ENV['BEHIND_PROXY'] == '1' %>
use_proxy=on
http_proxy=http://<%=ENV['PROXY_IP']%>:<%=ENV['PROXY_PORT']%> 
https_proxy=http://<%=ENV['PROXY_IP']%>:<%=ENV['PROXY_PORT']%> 
ftp_proxy=http://<%=ENV['PROXY_IP']%>:<%=ENV['PROXY_PORT']%> 
<% end %>
<% if ENV['REQUIRE_AUTH'] == '1' %>
proxy_user=<%=ENV['PROXY_ID']%>
proxy_passwd=<%=ENV['PROXY_PASSWD']%>
<% end %>
