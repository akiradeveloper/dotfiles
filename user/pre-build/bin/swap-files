#! /usr/bin/env ruby

require "tempfile"

def file_swap(argv)
  if argv.size != 2
    raise ArgumentError "argv size must be 2"
  end
  file1 = argv[0]
  file2 = argv[1]
  tmpfile = Tempfile.open("hoge").path
  system("mv #{file1} #{tmpfile}")
  system("mv #{file2} #{file1}")
  system("mv #{tmpfile} #{file2}")
end

if __FILE__ == $0
  file_swap(ARGV)
end
